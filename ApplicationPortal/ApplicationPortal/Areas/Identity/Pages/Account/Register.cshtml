@page
@using ApplicationPortal.Data.Entities
@using ApplicationPortal.Enums
@using ApplicationPortal.Data

@model RegisterModel
@{
    ViewBag.Title = "Registration page";
}

<h1 class="display-6 text-bg-primary align-content-md-center text-lg-center text-lg mb-5">Register</h1>

<div class="row justify-content-center">
    <div class="col-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p class="lead text-dark mark align-content-md-center text-lg-center text-lg mb-1">Create a new account</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                @*@Html.LabelFor(q => @Model.Input.CompanyId)*@
                @Html.DropDownListFor(q => @Model.Input.CompanyId, Model.Companies, "Company", new {@class = "form-select form-select-sm fs-6"})
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
