@model ExtraProductViewModel

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.HiddenFor(q => q.ProductId)

    <div>
        @Html.LabelFor(q => q.OtherInformation)
        @Html.TextBoxFor(q => q.OtherInformation)
    </div>

    <div>
        @Html.LabelFor(q => q.PathToFile)
        @Html.TextBoxFor(q => q.PathToFile)
    </div>

    //добавить ифы для выведения одной кнопки
    <button type="submit" name="action" value="submitEditedExtraInfo">Apply changes</button>

    <button>Submit</button>
    //<button>Verify inserted information</button>

}