@model ProductViewModel

<h5 class="display-6 text-bg-primary align-content-md-center text-lg-center text-lg mb-5">Product information No. @Model.Id</h5>

@*@Html.HiddenFor(q => q.Id)*@

@{
    var comments = ViewBag.Comments as List<CommentViewModelResponse>;
    var divList = "col-2";
}

<p class="lead mark text-dark">Comments left for the product No. @Model.Id</p>
<hr />

<div class="row">
    <ul>
        @foreach (var comment in comments)
        {
            <li>
                <div><i>Comment:</i> @comment.Text</div>
                <div><i>Left by: </i> @comment.UserEmail</div>
                <div class="mb-1"><i>On</i> @comment.CreatedDate</div>
            </li>
        }
    </ul>
</div>

@Html.ActionLink("Add a new comment", "CreateAComment", "Comment", new { productId = @Model.Id, isAdmin = true }, new {@class = "btn btn-outline-warning"})
<hr />

<h5 class="lead mark text-dark">General product info</h5>

<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => q.Name)</b>
    </div>
    <div class="@divList">
        @Html.DisplayTextFor(q => q.Name)
    </div>
</div>

<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => q.Model)</b>
    </div>
    <div class="@divList">
        @Html.DisplayTextFor(q => q.Model)
    </div>
</div>

<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => q.Brand)</b>
    </div>
    <div class="@divList">
        @Html.DisplayTextFor(q => q.Brand)
    </div>
</div>

<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => q.Manufacturer)</b>
    </div>
    <div class="@divList">
        @Html.DisplayTextFor(q => q.Manufacturer)
    </div>
</div>

@*<hr />*@

@*<h5 class="mark bg-primary text-light">Technical product info</h5>*@

<h5 class="lead mark text-dark mt-3">Technical product info</h5>


<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => q.OutputPower)</b>
    </div>
    <div class="@divList">
        @Html.DisplayTextFor(q => q.OutputPower)
    </div>
</div>

@for (int i = 0; i < Model.Frequencies.Count; i++)
{
    <div class="row">
        <div class="@divList">
            <b>@Html.DisplayNameFor(q => @Model.Frequencies[i].StartRange)</b>
        </div>
        <div class="@divList">
            @Html.DisplayTextFor(q => @Model.Frequencies[i].StartRange)
            @Html.DisplayTextFor(q => @Model.Frequencies[i].FrequencyUnit)
        </div>

        <div class="col-1">
            <b>@Html.DisplayNameFor(q => @Model.Frequencies[i].EndRange)</b>
        </div>
        <div class="@divList">
            @Html.DisplayTextFor(q => @Model.Frequencies[i].EndRange)
            @Html.DisplayTextFor(q => @Model.Frequencies[i].FrequencyUnit)
        </div>
    </div>
}

<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => @Model.AntennaGain.Amount)</b>
    </div>
    <div class="@divList">
        @Html.DisplayTextFor(q => Model.AntennaGain.Amount)
        @Html.DisplayTextFor(q => @Model.AntennaGain.AntennaGainUnit)
    </div>
</div>

<h5 class="lead mark text-dark mt-3">Additional product info</h5>

<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => q.OtherInformation)</b>
    </div>
    <div class="@divList">
        @Html.DisplayTextFor(q => q.OtherInformation)
    </div>
</div>

<div class="row">
    <div class="@divList">
        <b>@Html.DisplayNameFor(q => q.PathToFile)</b>
    </div>
    <div class="col-lg">
        @Html.DisplayTextFor(q => q.PathToFile)
    </div>
</div>

<hr />

<div class="row">
    <div class="col-2">
        @Html.ActionLink("Go back", "GetSubmittedProductsAndUsers", "Admin", null, new {@class="btn btn-outline-secondary"})
    </div>
    <div class="col-3">
        @Html.ActionLink("Confirm and go ahead", "AcceptProduct", "Admin", new {productId = @Model.Id}, new {@class="btn btn-success"})
    </div>
    <div class="col-2">
        @Html.ActionLink("Edit", "EditProduct", "Admin", new {productId = @Model.Id}, new {@class="btn btn-outline-primary"})
    </div>
    <div class="col-3">
        @Html.ActionLink("Delete", "DeleteProduct", "Admin", new {productId = @Model.Id}, new {@class="btn btn-danger"})
    </div>
</div>