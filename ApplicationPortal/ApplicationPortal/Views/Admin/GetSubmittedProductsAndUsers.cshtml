@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Products submitted for type approval";
}

<div>Products submitted for type approval</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(q => q.UserName)</th>
            <th>@Html.DisplayNameFor(q => q.Id)</th>
            <th>@Html.DisplayNameFor(q => q.Name)</th>
            <th>@Html.DisplayNameFor(q => q.Model)</th>
            <th>@Html.DisplayNameFor(q => q.Manufacturer)</th>
            <th>@Html.DisplayNameFor(q => q.Status)</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.UserName</td>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Model</td>
                <td>@product.Manufacturer</td>
                <td>@product.Status</td>
                <td>@Html.ActionLink("View", "ViewSubmittedProduct", "Admin", new {productId = product.Id})</td>
                <td>@Html.ActionLink("Delete", "DeleteProduct", "Admin", new {productId = product.Id})</td>                
                <td>@Html.ActionLink("Confirm and go ahead", "AcceptProduct", "Admin", new {productId = product.Id})</td>
                <td>@Html.ActionLink("Edit", "EditProduct", "Admin", new {productId = product.Id})</td>
            </tr>
        }
    </tbody>
</table>